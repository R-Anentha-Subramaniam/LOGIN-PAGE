<?xml version="1.0" encoding="UTF-8"?>

<!--
  FACULTY LOGIN APPLICATION - Complete FXML Layout
  
  INSTRUCTIONS FOR NON-CODERS:
  - This file contains the entire application layout and styling
  - To change college name: Look for "RNS First Grade College" and replace it
  - To change system name: Look for "Seminar Hall Booking System" and replace it
  - To change colors: Look for the style definitions and modify color values
  - To change text: Look for text="" attributes and modify the values
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FacultyLoginController" styleClass="root-container">

   <!-- TOP SECTION - Header with logo and theme toggle -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-section">
         <padding>
            <Insets bottom="25.0" left="40.0" right="40.0" top="25.0" />
         </padding>
         
         <!-- COLLEGE LOGO AND TITLE -->
         <VBox alignment="CENTER_LEFT" spacing="12.0" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <!-- COLLEGE LOGO -->
               <ImageView fx:id="collegeLogo" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" styleClass="college-logo" />
               
               <!-- COLLEGE INFO -->
               <VBox alignment="CENTER_LEFT" spacing="3.0">
                  <!-- COLLEGE NAME - CHANGEABLE -->
                  <Label fx:id="collegeNameLabel" styleClass="college-name" text="RNS First Grade College" />
                  
                  <!-- SYSTEM NAME - CHANGEABLE -->
                  <Label fx:id="systemNameLabel" styleClass="system-name" text="Seminar Hall Booking System" />
               </VBox>
            </HBox>
         </VBox>
         
         <!-- THEME TOGGLE BUTTON -->
         <Button fx:id="themeToggleButton" onAction="#toggleTheme" styleClass="theme-toggle" text="🌙" />
      </HBox>
   </top>

   <!-- CENTER SECTION - Main login content -->
   <center>
      <VBox alignment="CENTER" spacing="40.0" styleClass="main-content">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         
         <!-- WELCOME SECTION -->
         <VBox alignment="CENTER" maxWidth="600.0" spacing="20.0" styleClass="welcome-section">
            <!-- WELCOME MESSAGE - CHANGEABLE -->
            <Label fx:id="welcomeMessage" alignment="CENTER" styleClass="welcome-text" text="Faculty members, please select your department and log in to access the booking system" textAlignment="CENTER" wrapText="true" />
            
            <!-- INSTRUCTIONS - CHANGEABLE -->
            <Label fx:id="instructionsLabel" alignment="CENTER" styleClass="instructions-text" text="Select your department • Enter credentials • Access dashboard" textAlignment="CENTER" />
         </VBox>
         
         <!-- LOGIN FORM CARD -->
         <VBox alignment="CENTER" maxWidth="500.0" spacing="30.0" styleClass="login-card">
            <padding>
               <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            
            <!-- FORM HEADER -->
            <VBox alignment="CENTER" spacing="8.0">
               <Label styleClass="form-title" text="Faculty Login" />
               <Label styleClass="form-description" text="Access the seminar hall booking system" />
            </VBox>
            
            <!-- ERROR MESSAGE DISPLAY -->
            <Label fx:id="errorMessage" styleClass="error-message" visible="false" wrapText="true" />
            
            <!-- DEPARTMENT SELECTION -->
            <VBox spacing="15.0">
               <Label styleClass="section-label" text="🎓 Select Your Department" />
               
               <!-- DEPARTMENT BUTTONS -->
               <HBox alignment="CENTER" spacing="12.0">
                  <!-- BCA BUTTON -->
                  <Button fx:id="bcaButton" onAction="#selectBCA" styleClass="department-btn" text="BCA" />
                  
                  <!-- BBA BUTTON -->
                  <Button fx:id="bbaButton" onAction="#selectBBA" styleClass="department-btn" text="BBA" />
                  
                  <!-- BCOM BUTTON -->
                  <Button fx:id="bcomButton" onAction="#selectBCOM" styleClass="department-btn" text="BCOM" />
               </HBox>
               
               <!-- SELECTED DEPARTMENT DISPLAY -->
               <Label fx:id="departmentDescription" alignment="CENTER" styleClass="department-desc" textAlignment="CENTER" visible="false" />
            </VBox>
            
            <!-- USERNAME INPUT -->
            <VBox spacing="8.0">
               <Label styleClass="input-label" text="👤 Faculty Username" />
               <TextField fx:id="usernameField" promptText="Enter your faculty username" styleClass="input-field" />
            </VBox>
            
            <!-- PASSWORD INPUT -->
            <VBox spacing="8.0">
               <Label styleClass="input-label" text="🔐 Password" />
               <HBox alignment="CENTER_LEFT" spacing="0.0">
                  <!-- REGULAR PASSWORD FIELD -->
                  <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="password-field" HBox.hgrow="ALWAYS" />
                  
                  <!-- VISIBLE PASSWORD FIELD (HIDDEN BY DEFAULT) -->
                  <TextField fx:id="passwordVisibleField" promptText="Enter your password" styleClass="password-field" visible="false" HBox.hgrow="ALWAYS" />
                  
                  <!-- PASSWORD TOGGLE BUTTON -->
                  <Button fx:id="passwordToggle" onAction="#togglePasswordVisibility" styleClass="password-toggle" text="👁" />
               </HBox>
            </VBox>
            
            <!-- OPTIONS SECTION -->
            <HBox alignment="CENTER" spacing="25.0">
               <!-- REMEMBER ME CHECKBOX -->
               <CheckBox fx:id="rememberMeCheckbox" styleClass="remember-checkbox" text="Remember me" />
               
               <!-- FORGOT PASSWORD LINK -->
               <Button fx:id="forgotPasswordButton" onAction="#handleForgotPassword" styleClass="link-button" text="Forgot password?" />
            </HBox>
            
            <!-- SIGN IN BUTTON -->
            <Button fx:id="signInButton" defaultButton="true" maxWidth="Infinity" onAction="#handleSignIn" styleClass="primary-button" text="Sign In" />
            
            <!-- LOADING INDICATOR -->
            <HBox fx:id="loadingIndicator" alignment="CENTER" spacing="10.0" styleClass="loading-section" visible="false">
               <Label styleClass="loading-text" text="Signing in..." />
            </HBox>
         </VBox>
      </VBox>
   </center>
   
   <!-- BOTTOM SECTION - Footer -->
   <bottom>
      <VBox alignment="CENTER" spacing="15.0" styleClass="footer-section">
         <padding>
            <Insets bottom="25.0" left="40.0" right="25.0" top="25.0" />
         </padding>
         
         <!-- FOOTER SEPARATOR -->
         <Separator styleClass="footer-separator" />
         
         <!-- COPYRIGHT - CHANGEABLE -->
         <Label fx:id="copyrightLabel" alignment="CENTER" styleClass="copyright-text" text="© 2024 RNS First Grade College. All rights reserved." textAlignment="CENTER" />
      </VBox>
   </bottom>
</BorderPane>