<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<!--
  LOGIN FORM FXML - Faculty login form layout
  
  INSTRUCTIONS FOR NON-CODERS:
  - This file defines the layout of the login form
  - To change field order: Rearrange VBox children
  - To change spacing: Modify spacing attributes
  - To change field sizes: Modify prefWidth/prefHeight attributes
  - Button text is set in the controller for easier customization
-->

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.booking.controllers.LoginController" alignment="CENTER" maxWidth="500.0" spacing="25.0" styleClass="login-form">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>

   <!-- FORM HEADER -->
   <VBox alignment="CENTER" spacing="8.0" styleClass="form-header">
      <Label styleClass="form-title" text="Faculty Login" />
      <Label styleClass="form-description" text="Access the seminar hall booking system" />
   </VBox>

   <!-- ERROR MESSAGE DISPLAY -->
   <Label fx:id="errorMessageLabel" styleClass="error-message" visible="false" wrapText="true" />

   <!-- DEPARTMENT SELECTION -->
   <VBox spacing="10.0" styleClass="department-section">
      <Label styleClass="section-label" text="Select Your Department" />
      
      <!-- DEPARTMENT BUTTONS GRID -->
      <GridPane fx:id="departmentGrid" hgap="10.0" styleClass="department-grid">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
         </columnConstraints>
         <!-- Department buttons will be added programmatically -->
      </GridPane>
      
      <!-- SELECTED DEPARTMENT DISPLAY -->
      <Label fx:id="selectedDepartmentLabel" styleClass="department-description" visible="false" />
   </VBox>

   <!-- USERNAME INPUT -->
   <VBox spacing="6.0" styleClass="input-section">
      <Label styleClass="input-label" text="Faculty Username" />
      <TextField fx:id="usernameField" promptText="Enter your faculty username" styleClass="form-input" />
   </VBox>

   <!-- PASSWORD INPUT -->
   <VBox spacing="6.0" styleClass="input-section">
      <Label styleClass="input-label" text="Password" />
      <HBox alignment="CENTER_LEFT" spacing="0.0" styleClass="password-container">
         <TextField fx:id="passwordVisibleField" promptText="Enter your password" styleClass="form-input password-input" visible="false" HBox.hgrow="ALWAYS" />
         <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="form-input password-input" HBox.hgrow="ALWAYS" />
         <Button fx:id="passwordToggleButton" onAction="#togglePasswordVisibility" styleClass="password-toggle" text="👁" />
      </HBox>
   </VBox>

   <!-- REMEMBER ME AND FORGOT PASSWORD -->
   <HBox alignment="CENTER" spacing="20.0" styleClass="options-section">
      <!-- REMEMBER ME CHECKBOX -->
      <CheckBox fx:id="rememberMeCheckbox" styleClass="remember-checkbox" text="Remember me" />
      
      <!-- FORGOT PASSWORD LINK -->
      <Button fx:id="forgotPasswordButton" onAction="#handleForgotPassword" styleClass="link-button" text="Forgot password?" />
   </HBox>

   <!-- SIGN IN BUTTON -->
   <Button fx:id="signInButton" defaultButton="true" maxWidth="Infinity" onAction="#handleSignIn" styleClass="primary-button" text="Sign In" />

   <!-- LOADING INDICATOR -->
   <VBox fx:id="loadingContainer" alignment="CENTER" spacing="10.0" styleClass="loading-container" visible="false">
      <Label styleClass="loading-text" text="Signing in..." />
      <!-- TODO: Add actual loading animation -->
   </VBox>
</VBox>

<!--
  LAYOUT CUSTOMIZATION GUIDE FOR NON-CODERS:
  
  1. CHANGING FORM WIDTH:
     - Modify maxWidth attribute on root VBox
     - Larger values = wider form, smaller values = narrower form
  
  2. CHANGING SPACING:
     - Modify spacing attributes on VBox and HBox elements
     - Larger values = more space between elements
  
  3. CHANGING FIELD ORDER:
     - Rearrange the VBox children in desired order
     - Each major section is wrapped in its own VBox or HBox
  
  4. ADDING NEW FIELDS:
     - Copy existing input section structure
     - Add unique fx:id for controller access
     - Update controller to handle new field
  
  5. CHANGING BUTTON LAYOUT:
     - Modify HBox alignment and spacing for different arrangements
     - Use VBox for vertical button stacking
  
  6. RESPONSIVE BEHAVIOR:
     - HBox.hgrow="ALWAYS" makes elements expand to fill space
     - maxWidth="Infinity" on buttons makes them full-width
-->